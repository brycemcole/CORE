<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
  <title>CORE/openings</title>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
  <link rel="stylesheet" href="css/jobs.css" />
  <link rel="stylesheet" href="css/navbar.css" />
  <link rel="stylesheet" href="./css/com-btn-container.css" />


  <link rel="shortcut icon" href="/img/core.png" />
</head>

<body>
  <%- include('partials/navbar', { pagePath: 'jobs' }) %>
  <main>

    <%- include('partials/com-btn-container', { }) %>

    <div class="jobs-container">
      <div class="jobs-container-header">
        <div class="jobs-sort-selector">
          <% if (user && user.recruiter_id) { %>
          <div class="create-job-button">
            <button class="create-job" onclick="window.location.href='/jobs/create';">+</button>
          </div>
          <% } %>
          <div class="job-filters">
            I want to find a
            <select id="job-title-filter">
              <option value="">job</option>
            </select>
            <select id="employment-type-filter">
              <option value="employment type"></option>
            </select>
            in
            <select id="location-filter">
              <option value="">location</option>
            </select>
            making at least
            <select id="salary-filter">
              <option value="">salary</option>
            </select>
          </div>
        </div>
      </div>
      <div class="job-list">

      </div>
    </div>
    </div>
  </main>
  <script src="js/jobs.js"></script>
</body>

</html>