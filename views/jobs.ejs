<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
  <title>CORE/openings</title>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
  <link rel="stylesheet" href="css/jobs.css" />
  <link rel="stylesheet" href="css/navbar.css" />
  <link rel="stylesheet" href="./css/com-btn-container.css" />


  <link rel="shortcut icon" href="/img/core.png" />
</head>

<body>
  <%- include('partials/navbar', { pagePath: 'jobs' }) %>
  <main>

    <%- include('partials/com-btn-container', { }) %>

    <div class="jobs-container">
      <div class="jobs-container-header">
        <h5>Openings</h5>
        <div class="jobs-sort-selector">
          <% if (user && user.recruiter_id) { %>
          <div class="create-job-button">
            <button class="create-job" onclick="window.location.href='/jobs/create';">+</button>
          </div>
          <% } %>
          <div class="job-filters">
            <select id="location-filter">
              <option value="">All Locations</option>
              <!-- Add more location options dynamically -->
            </select>
            <select id="experience-filter">
              <option value="">All Experience Levels</option>
              <option value="Contract">Contract</option>
              <option value="Internship">Internship</option>
              <option value="Entry Level">Entry Level</option>
              <option value="Mid Level">Mid Level</option>
              <option value="Senior">Senior Level</option>
            </select>
            <select id="salary-filter">
              <option value="">All Salaries</option>
              <option value="0-50000">$0 - $50,000</option>
              <option value="50000-100000">$50,000 - $100,000</option>
              <option value="100000-150000">$100,000 - $150,000</option>
              <option value="150000">$150,000+</option>
            </select>
          </div>
        </div>
      </div>
      <div class="job-list">

      </div>
    </div>
    </div>
  </main>
  <script src="js/jobs.js"></script>
</body>

</html>